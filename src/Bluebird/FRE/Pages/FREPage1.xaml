<Page
    x:Class="Bluebird.FRE.Pages.FREPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Bluebird.FRE.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Image
                Width="100"
                Height="100"
                Source="ms-appx:/Assets/Square44x44Logo.targetsize-256.png" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="20"
                Text="Welcome to Bluebird!" />
            <TextBlock HorizontalAlignment="Center" Text="Your next-gen webbrowser for Windows" />
        </StackPanel>
        <Button
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="GetStartedButton_Click"
            Content="Get started" />
    </Grid>
</Page>
