<Page
    x:Class="Bluebird.Pages.SettingPages.General"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Bluebird.Pages.SettingPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svsettctrl="using:SVSettingsControl"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <StackPanel>
        <svsettctrl:SettingsBlockControl Title="Search engine">
            <svsettctrl:SettingsBlockControl.Icon>
                <SymbolIcon Symbol="Find" />
            </svsettctrl:SettingsBlockControl.Icon>
            <ComboBox x:Name="SearchEngineSelector" />
        </svsettctrl:SettingsBlockControl>
        <svsettctrl:SettingsBlockControl Title="Force dark mode for all websites">
            <svsettctrl:SettingsBlockControl.Icon>
                <FontIcon Glyph="&#xE790;" />
            </svsettctrl:SettingsBlockControl.Icon>
            <ToggleSwitch x:Name="ForceDarkSwitch" Margin="0,0,-80,0" />
        </svsettctrl:SettingsBlockControl>
    </StackPanel>
</Page>
