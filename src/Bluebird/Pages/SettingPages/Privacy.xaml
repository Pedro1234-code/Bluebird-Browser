<Page
    x:Class="Bluebird.Pages.SettingPages.Privacy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Bluebird.Pages.SettingPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svsettctrl="using:SVSettingsControl"
    mc:Ignorable="d">

    <StackPanel>
        <svsettctrl:SettingsBlockControl Title="Password" Description="Require a password to open Bluebird">
            <svsettctrl:SettingsBlockControl.Icon>
                <FontIcon FontFamily="ms-appx:///Fonts/Segoe Fluent Icons.tff#Segoe Fluent Icons" Glyph="&#xE192;" />
            </svsettctrl:SettingsBlockControl.Icon>
            <ToggleSwitch x:Name="PasswordLockToggle" />
        </svsettctrl:SettingsBlockControl>
        <svsettctrl:SettingsBlockControl Title="Disable JavaScript" Description="This improves your privacy by blocking trackers but it can also break a lot sites">
            <svsettctrl:SettingsBlockControl.Icon>
                <FontIcon FontFamily="ms-appx:///Fonts/Segoe Fluent Icons.tff#Segoe Fluent Icons" Glyph="&#xE943;" />
            </svsettctrl:SettingsBlockControl.Icon>
            <ToggleSwitch x:Name="DisableJavaScriptToggle" />
        </svsettctrl:SettingsBlockControl>
        <svsettctrl:SettingsBlockControl Title="Disable Genaral Autofill" Description="This will disable autofilling in browser ( No Automaticly Fill )">
            <svsettctrl:SettingsBlockControl.Icon>
                <FontIcon FontFamily="ms-appx:///Fonts/Segoe Fluent Icons.tff#Segoe Fluent Icons" Glyph="&#xE8DA;" />
            </svsettctrl:SettingsBlockControl.Icon>
            <ToggleSwitch x:Name="DisableGenaralAutoFillToggle" />
        </svsettctrl:SettingsBlockControl>
        <svsettctrl:SettingsBlockControl Title="Disable Web Messages" Description="This will disable browser WebMessages">
            <svsettctrl:SettingsBlockControl.Icon>
                <FontIcon FontFamily="ms-appx:///Fonts/Segoe Fluent Icons.tff#Segoe Fluent Icons" Glyph="&#xE8BD;" />
            </svsettctrl:SettingsBlockControl.Icon>
            <ToggleSwitch x:Name="DisableWebMessFillToggle" />
        </svsettctrl:SettingsBlockControl>
        <svsettctrl:SettingsBlockControl Title="Disable Save Passwords" Description="This will disable browser Auto Save Password">
            <svsettctrl:SettingsBlockControl.Icon>
                <FontIcon FontFamily="ms-appx:///Fonts/Segoe Fluent Icons.tff#Segoe Fluent Icons" Glyph="&#xF427;" />
            </svsettctrl:SettingsBlockControl.Icon>
            <ToggleSwitch x:Name="PasswordWebMessFillToggle" />
        </svsettctrl:SettingsBlockControl>
    </StackPanel>
</Page>
